<Window x:Class="tictactoelab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Крестики-нолики (версия 1)" Height="400" Width="446"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель статуса и информации об авторе -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Label x:Name="AuthorLabel" Content="Котельникова Наталья Ильинична" FontSize="14" Margin="5"/>
            <Label x:Name="StatusLabel" Content="Ход: X" FontSize="16" FontWeight="Bold" Margin="20,5,5,5"/>
            <Button x:Name="NewGameButton" Content="Новая игра" Click="NewGameButton_Click" Margin="5"/>
        </StackPanel>

        <!-- Игровое поле 3x3 из кнопок -->
        <UniformGrid Grid.Row="1" Rows="3" Columns="3" Margin="20">
            <Button x:Name="Button00" Click="CellButton_Click" Tag="0,0"/>
            <Button x:Name="Button01" Click="CellButton_Click" Tag="0,1"/>
            <Button x:Name="Button02" Click="CellButton_Click" Tag="0,2"/>
            <Button x:Name="Button10" Click="CellButton_Click" Tag="1,0"/>
            <Button x:Name="Button11" Click="CellButton_Click" Tag="1,1"/>
            <Button x:Name="Button12" Click="CellButton_Click" Tag="1,2"/>
            <Button x:Name="Button20" Click="CellButton_Click" Tag="2,0"/>
            <Button x:Name="Button21" Click="CellButton_Click" Tag="2,1"/>
            <Button x:Name="Button22" Click="CellButton_Click" Tag="2,2"/>
        </UniformGrid>

        <!-- Пустая строка внизу -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <TextBlock Text="Версия 1: Обычная игра"/>
        </StackPanel>
    </Grid>
</Window>
