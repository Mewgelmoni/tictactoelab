<Window x:Class="tictactoelab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Крестики-нолики (версия 2)" Height="450" Width="450"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель: ФИО, статус, кнопка новой игры -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Label x:Name="AuthorLabel" Content="Иванова Анна Петровна" FontSize="14" Margin="5"/>
            <Label x:Name="StatusLabel" Content="Ход: X" FontSize="16" FontWeight="Bold" Margin="20,5,5,5"/>
            <Button x:Name="NewGameButton" Content="Новая игра" Click="NewGameButton_Click" Margin="5" Padding="5,2"/>
        </StackPanel>

        <!-- Игровое поле 3x3 -->
        <UniformGrid Grid.Row="1" Rows="3" Columns="3" Margin="20">
            <Button x:Name="Button00" Click="CellButton_Click" Tag="0,0" FontSize="28"/>
            <Button x:Name="Button01" Click="CellButton_Click" Tag="0,1" FontSize="28"/>
            <Button x:Name="Button02" Click="CellButton_Click" Tag="0,2" FontSize="28"/>
            <Button x:Name="Button10" Click="CellButton_Click" Tag="1,0" FontSize="28"/>
            <Button x:Name="Button11" Click="CellButton_Click" Tag="1,1" FontSize="28"/>
            <Button x:Name="Button12" Click="CellButton_Click" Tag="1,2" FontSize="28"/>
            <Button x:Name="Button20" Click="CellButton_Click" Tag="2,0" FontSize="28"/>
            <Button x:Name="Button21" Click="CellButton_Click" Tag="2,1" FontSize="28"/>
            <Button x:Name="Button22" Click="CellButton_Click" Tag="2,2" FontSize="28"/>
        </UniformGrid>

        <!-- Нижняя панель: счет и кастомизация -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <!-- Счетчик побед -->
            <Border BorderBrush="Gray" BorderThickness="1" Padding="8" Margin="5" CornerRadius="5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="ScoreXText" Text="X: 0" FontWeight="Bold" FontSize="14" Margin="10,0"/>
                    <TextBlock x:Name="ScoreOText" Text="O: 0" FontWeight="Bold" FontSize="14" Margin="10,0"/>
                </StackPanel>
            </Border>

            <!-- Кастомизация символов -->
            <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                <Label Content="X:" VerticalAlignment="Center"/>
                <TextBox x:Name="SymbolXTextBox" Text="X" Width="30" Margin="2" FontSize="14"/>
                <Label Content="O:" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <TextBox x:Name="SymbolOTextBox" Text="O" Width="30" Margin="2" FontSize="14"/>
                <Button x:Name="ApplySymbolsButton" Content="Применить" Click="ApplySymbolsButton_Click" Margin="5" Padding="5,2"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
